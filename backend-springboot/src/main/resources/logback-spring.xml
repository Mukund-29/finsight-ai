<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Completely silence Hibernate SQL logging -->
    <logger name="org.hibernate.SQL" level="OFF"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="OFF"/>
    <logger name="org.hibernate.type.descriptor.sql" level="OFF"/>
    <logger name="org.hibernate.engine.internal" level="OFF"/>
    <logger name="org.hibernate.stat" level="OFF"/>
    <logger name="org.hibernate.orm" level="OFF"/>
    <logger name="org.hibernate" level="WARN"/>
    
    <!-- Application logging -->
    <logger name="com.finsight" level="INFO"/>
    
    <!-- Spring Security logging -->
    <logger name="org.springframework.security" level="INFO"/>
    
    <!-- Spring JDBC logging -->
    <logger name="org.springframework.jdbc" level="INFO"/>
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
